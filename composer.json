{
    "name": "pestphp/pest-plugin-faker",
    "description": "The Pest Faker Plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "faker"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "fakerphp/faker": "^1.20",
        "pestphp/pest": "^1.22.1"
    },
    "autoload": {
        "psr-4": {
            "Pest\\Faker\\": "src/"
        },
        "files": ["src/Faker.php"]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^1.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
